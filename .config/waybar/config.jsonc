
{
    "layer": "top",
    "position": "top",
    "height": 40, // Altura confort√°vel para TV
    "spacing": 4,
    "reload_style_on_change": true,

    "passthrough": false,
    // "exclusive": false,

    "margin-top": 135,
    "margin-left": 240,
    "margin-right": 240,
    "margin-bottom": 0,

    // M√≥dulos
    "modules-left": [
        "custom/launcher", // Menu Iniciar
        "wlr/taskbar",     // Apps Abertos (√çcones)
        "group/shortcuts", // Atalhos Fixados
        "hyprland/window"  // Janela Focada
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "custom/updates",  // Updates Arch
        "tray",            // Apps em Background (OBS, etc)
        "pulseaudio",      // Som
        "custom/notification", // Notifica√ß√µes
        "clock",           // Horas
        "custom/power"     // Menu Power
    ],

    // --- Configura√ß√£o Detalhada dos M√≥dulos ---

    "custom/launcher": {
        "format": "Apps",
        "on-click": "wofi --show drun",
        "tooltip": false
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close"
    },

    "group/shortcuts": {
        "orientation": "horizontal",
        "modules": ["custom/browser", "custom/terminal"]
    },

    "custom/browser": {
        "format": "Ôâ©",
        "on-click": "brave", 
        "tooltip": false
    },

    "custom/terminal": {
        "format": "Ôíâ",
        "on-click": "kitty",
        "tooltip": false
    },

    "hyprland/window": {
        "format": "{title}",
        "max-length": 40,
        "separate-outputs": true
    },

    "hyprland/workspaces": {
        "format": "{icon}",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1"
    },

    "custom/updates": {
        "format": "‚¨áÔ∏è {}",
        "interval": 3600,
        "exec": "checkupdates | wc -l", // Contagem simples
        "exec-if": "exit 0",
        "on-click": "kitty -e yay", // Abre terminal para atualizar ao clicar
        "signal": 8
    },

    "tray": {
        "icon-size": 18,
        "spacing": 10
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "üîá Muted",
        "format-icons": {
            "default": ["üîà", "or", "üîä"]
        },
        "on-click": "pwvucontrol"
    },

    "custom/notification": {
        "tooltip": false,
        "format": "ÔÉ≥", // Icone sino
        "on-click": "swaync-client -t -sw",
        "escape": true
    },

    "clock": {
        "format": "{:%H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt>{calendar}</tt>"
    },

    "custom/power": {
        "format": "‚èª",
        "tooltip": false,
        "on-click": "wlogout"
    }
}